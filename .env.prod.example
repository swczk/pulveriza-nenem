# Environment Variables for Production
# Copy this file to .env.prod and configure your values

# Spring Boot API Database
DATABASE_URL=jdbc:postgresql://localhost:5432/pulverizacao_prod

# AWS Cognito Configuration
AWS_COGNITO_REGION=us-east-1
AWS_COGNITO_URL=https://cognito-idp.us-east-1.amazonaws.com
AWS_COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
AWS_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_COGNITO_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# MongoDB Configuration for GraphQL API (Local Container)
MONGO_PASSWORD=your_secure_mongodb_password
DATABASE_NAME=pulverizacao

# Note: MongoDB runs as a container, MONGO_URI is automatically configured as:
# mongodb://admin:${MONGO_PASSWORD}@mongodb:27017

# Example with PostgreSQL Cloud:
# DATABASE_URL=jdbc:postgresql://hostname:5432/database_name?user=username&password=password&sslmode=require